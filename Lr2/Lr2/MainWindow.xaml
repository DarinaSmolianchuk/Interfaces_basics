<Window x:Class="Lr2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lr2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <!--Замініть контейнер Grid на StackPanel і розмістіть у ньому елементи Label, TextBox та Button -->

    <StackPanel Margin="50" VerticalAlignment="Top" Height="200">
        <Label HorizontalAlignment="Center">Label</Label>
        <TextBox >TextBox</TextBox>
        <TextBox >TextBox</TextBox>
        <TextBox >TextBox</TextBox>
        <TextBox >TextBox</TextBox>
        <Button HorizontalAlignment="Center" Margin="80" Width="200">Button</Button>
    </StackPanel>

</Window>